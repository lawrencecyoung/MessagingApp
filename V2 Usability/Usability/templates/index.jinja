{% extends 'base.jinja' %}

{% block content %}
<style>

  body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
  }

  .container {
    max-width: 600px;
    padding: 20px;
    text-align: center;
    font-family: monospace;
  }

  .action-buttons {
    margin-top: 30px;
  }

  .btn {
    padding: 10px 20px;
    margin-right: 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s;
    text-decoration: none;
    color: #fff;
  }

  .btn-primary {
    background-color: #007bff;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .btn-secondary {
    background-color: #6c757d;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }
</style>

<div class="container">
  <h1>Welcome to INFOMessenger!</h1>
  <p>Get started by signing up or logging in!</p>
  <div class="action-buttons">
    <a href="{{ url_for('signup') }}" class="btn btn-primary">Sign Up</a>
    <a href="{{ url_for('login') }}" class="btn btn-secondary">Login</a>
  </div>
</div>
{% endblock %}